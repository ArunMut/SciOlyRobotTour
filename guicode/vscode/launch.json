{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run SFML Program",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/gui.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "PATH",
          "value": "C:/Program Files/SFML-2.6.2/bin;${env:PATH}"
        }
      ],
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build with SFML"
    }
  ]
}
