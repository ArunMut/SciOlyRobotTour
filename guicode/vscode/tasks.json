{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build with SFML",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",
          "${workspaceFolder}/gui.cpp",
          "-I", "C:/Program Files/SFML-2.6.2/include",
          "-L", "C:/Program Files/SFML-2.6.2/lib",
          "-lsfml-graphics",
          "-lsfml-window",
          "-lsfml-system",
          "-o", "${workspaceFolder}/gui.exe"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "presentation": {
          "close": true
        }
      }
    ]
  }
  
